[numthreads(8,8,8)]
void DensityDiffusion(uint3 id : SV_DispatchThreadID)
{
    // run this 20 times
    // input d0, diff, dt, output d1
    float a = dt * diff;
    DensityWrite[id] = (DensityRead[id] + a * (
        DensityWrite[int3(id.x - 1, id.y, id.z)] +
        DensityWrite[int3(id.x + 1, id.y, id.z)] +
        DensityWrite[int3(id.x, id.y - 1, id.z)] +
        DensityWrite[int3(id.x, id.y + 1, id.z)] +
        DensityWrite[int3(id.x, id.y, id.z - 1)] +
        DensityWrite[int3(id.x, id.y, id.z + 1)]
        )) / (1 + 6 * a);
}

[numthreads(8,8,8)]
void ViscousDiffusion(uint3 id : SV_DispatchThreadID)
{
    // run this 20 times
    // input d0, diff, dt, output d1
    float a = dt * visc;
    VelocityWrite[id] = (VelocityRead[id] + a * (
        VelocityWrite[int3(id.x - 1, id.y, id.z)] +
        VelocityWrite[int3(id.x + 1, id.y, id.z)] +
        VelocityWrite[int3(id.x, id.y - 1, id.z)] +
        VelocityWrite[int3(id.x, id.y + 1, id.z)] +
        VelocityWrite[int3(id.x, id.y, id.z - 1)] +
        VelocityWrite[int3(id.x, id.y, id.z + 1)]
        )) / (1 + 6 * a);
}

[numthreads(8,8,8)]
void DensityAdvect(uint3 id : SV_DispatchThreadID)
{
    // input v, d0, dt, output d1
    // back trace in d0 with v/dt, sample trilinear
    float3 samplePos = float3(id.x, id.y, id.z) - VelocityWrite[id] * dt * speed;
    float3 uvw = ToUvw(samplePos);
    DensityWrite[id] = DensityRead.SampleLevel(samplerDensity, uvw, 0);
}

[numthreads(8,8,8)]
void VelocityAdvect(uint3 id : SV_DispatchThreadID)
{
    // input v, d0, dt, output d1
    // back trace in d0 with v/dt, sample trilinear
    float3 samplePos = float3(id.x, id.y, id.z) - VelocityWrite[id] * dt * speed;
    float3 uvw = ToUvw(samplePos);
    VelocityWrite[id] = VelocityRead.SampleLevel(samplerVelocity, uvw, 0);
}

